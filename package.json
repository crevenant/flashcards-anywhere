{
  "name": "flashcards-anywhere",
  "version": "1.0.5",
  "description": "Flashcards Anywhere Electron app",
  "main": "main.js",
  "scripts": {
    "start:server": "node server.js",
    "start:electron": "electron .",
    "start:all": "concurrently \"npm run start:server\" \"npm run start:electron\"",
    "start": "npm run start:all",
    "test": "jest",
    "build:win": "electron-builder --win --x64 --publish never",
    "release": "node release.js",
    "build:mac": "electron-builder --mac --x64",
    "build:linux": "electron-builder --linux --x64",
    "build": "electron-builder --dir"
  },
  "build": {
    "appId": "com.flashcards.anywhere",
    "productName": "Flashcards Anywhere",
    "files": [
      "main.js",
      "server.js",
      "public/**/*",
      "data/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "public"
    }
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.1.3",
    "electron-builder": "^24.6.0",
    "prettier": "^3.2.5"
  },
  "dependencies": {
    "express": "^4.19.2",
    "sqlite3": "^5.1.7"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
