{
	"name": "flashcards-anywhere",
	"version": "1.0.6",
	"description": "Flashcards Anywhere Electron app",
	"main": "main.js",
	"scripts": {
		"start:server": "node src/server.js",
		"start:electron": "electron .",
		"start:all": "concurrently \"npm run start:server\" \"npm run start:electron\"",
		"start": "npm run start:all",
		"test": "jest",
		"test:electron": "jest tests/electron.integration.test.js",
		"test:config": "jest test/config.test.js",
		"test:playwright": "npx playwright test tests/electron.playwright.test.js",
		"test:frontend-api": "npx playwright test tests/frontend.api.integration.test.js",
		"build:win": "electron-builder --win --x64 --publish never",
		"release": "node scripts/release.js",
		"build:mac": "electron-builder --mac --x64",
		"build:linux": "electron-builder --linux --x64",
		"build": "electron-builder --dir"
	},
	"build": {
		"appId": "com.flashcards.anywhere",
		"productName": "Flashcards Anywhere",
		"files": [
			"main.js",
			"server.js",
			"public/**/*",
			"data/**/*",
			"node_modules/**/*",
			"package.json"
		],
		"directories": {
			"buildResources": "public"
		}
	},
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@eslint/css": "^0.11.0",
		"@eslint/js": "^9.34.0",
		"@eslint/json": "^0.13.2",
		"@eslint/markdown": "^7.2.0",
		"@playwright/test": "^1.55.0",
		"electron": "^28.3.3",
		"electron-builder": "^24.6.0",
		"eslint": "^9.34.0",
		"globals": "^16.3.0",
		"playwright": "^1.55.0",
		"prettier": "^3.2.5"
	},
	"dependencies": {
		"express": "^4.19.2",
		"node-fetch": "^2.7.0",
		"sqlite3": "^5.1.7",
			"supertest": "^7.1.4"
		}
}
